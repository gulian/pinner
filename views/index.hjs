<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>{{ title }}</title>
	
	<link rel="stylesheet" href="/stylesheets/bootstrap.css">
	<link rel="stylesheet" href="/stylesheets/style.css">

	<script type="text/javascript" src="/javascripts/vendor/jquery/jquery.js"></script>
	<script type="text/javascript" src="/javascripts/vendor/underscore/underscore.js"></script>
	<script type="text/javascript" src="/javascripts/vendor/backbone/backbone.js"></script>
	<script type="text/javascript" src="/javascripts/vendor/bootstrap/bootstrap.js"></script>
	<script type="text/javascript" src="/javascripts/vendor/packery/packery.pkgd.min.js"></script>
	<script type="text/javascript" src="/javascripts/app.js"></script>
	<script>
		//TODO : in Javascript File	
		docReady( function() {
		  //TODO : without button and auto reload
		  var container = document.querySelector('.packery');
		  var button = document.querySelector('button');
		  var pckry = new Packery( container );
		  var isActive = true;

		  eventie.bind( button, 'click', function() {
		      if ( isActive ) {
		              pckry.destroy();
		      } else {
			      pckry = new Packery( container );
		      }
		      isActive = !isActive;
		  });
		});
	</script>
</head>
<body>
	<button class="button">Toggle Packery</button>
	<div id="Pinner">
		<!--Temp -->
		<button id="new-post-btn" class="btn btn-large">+</button>
		
		<div id="post-list" class="packery"></div>
		<form id="new-post-form" class="well well-small span4 post">
			<input type="text" name="title"   placeholder="Title">
			<input type="text" name="link"  placeholder="Link">
			<!-- <input type="text" name="version" placeholder="Version"> -->
			<button id="create-post-btn" class="btn">Create</button>
			<!--Temporary : select size -->
			<input type="radio" name="radioSize" value="span4">S4</input>
			<input type="radio" name="radioSize" value="span5">S5</input>
			<input type="radio" name="radioSize" value="span6">S6</input>
		</form>
	</div>
</body>
</html>
